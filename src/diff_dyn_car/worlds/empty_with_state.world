<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="default">

    <!-- 关键：让 Gazebo 往 ROS2 发 /gazebo/model_states /gazebo/link_states 等 -->
    <plugin name="gazebo_ros_factory" filename="libgazebo_ros_factory.so"/>
    <plugin name="gazebo_ros_state"   filename="libgazebo_ros_state.so"/>

    <!-- 地面 -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- 太阳光 -->
    <include>
      <uri>model://sun</uri>
    </include>

  </world>
</sdf>
